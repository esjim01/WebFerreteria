@model WebFerreteria.Models.Entregas

@{
    ViewData["Title"] = "Eliminar Entrega";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <h4 class="edit-title black-text text-darken-2">¿Estás seguro de eliminar esta entrega?</h4>
    <div class="card white z-depth-2">
        <div class="card-content">
            <ul class="collection with-header">

                <li class="collection-header">
                    <h5><i class="material-icons left">location_on</i>Dirección de Entrega</h5>
                </li>
                <li class="collection-item">@Model.DireccionEntrega</li>

                <li class="collection-header">
                    <h5><i class="material-icons left">calendar_today</i>Fecha de Entrega</h5>
                </li>
                <li class="collection-item">@Model.FechaEntrega</li>

                <li class="collection-header">
                    <h5><i class="material-icons left">person</i>Entregado Por</h5>
                </li>
                <li class="collection-item">@Model.EntregadoPorNavigation.Id</li>

                <li class="collection-header">
                    <h5><i class="material-icons left">assignment</i>Pedido</h5>
                </li>
                <li class="collection-item">@Model.Pedido.Id</li>

            </ul>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="row btn-group">
                    <div class="col s12">
                        <button type="submit" class="btn-large blue tooltipped">
                            <i class="material-icons left">delete</i> Eliminar
                        </button>
                        <a asp-action="Index" class="btn-large grey darken-1 waves-effect waves-light">
                            <i class="material-icons left">arrow_back</i> Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
