@model WebFerreteria.Models.Empresa

@{
    ViewData["Title"] = "Crear Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4 class="create-title">Crear Empresa</h4>

    <div class="card white create-card z-depth-2">
        <div class="card-content">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="red-text text-darken-2"></div>

                <!-- Nombre -->
                <div class="input-field">
                    <i class="material-icons prefix">business</i>
                    <input asp-for="Nombre" id="Nombre" class="validate" />
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre" class="helper-text red-text"></span>
                </div>

                <!-- NIT -->
                <div class="input-field">
                    <i class="material-icons prefix">badge</i>
                    <input asp-for="Nit" id="Nit" class="validate" />
                    <label asp-for="Nit"></label>
                    <span asp-validation-for="Nit" class="helper-text red-text"></span>
                </div>

                <!-- Dirección -->
                <div class="input-field">
                    <i class="material-icons prefix">location_on</i>
                    <input asp-for="Direccion" id="Direccion" class="validate" />
                    <label asp-for="Direccion"></label>
                    <span asp-validation-for="Direccion" class="helper-text red-text"></span>
                </div>

                <!-- Teléfono -->
                <div class="input-field">
                    <i class="material-icons prefix">call</i>
                    <input asp-for="Telefono" id="Telefono" class="validate" />
                    <label asp-for="Telefono"></label>
                    <span asp-validation-for="Telefono" class="helper-text red-text"></span>
                </div>

                <!-- Correo -->
                <div class="input-field">
                    <i class="material-icons prefix">email</i>
                    <input asp-for="Correo" id="Correo" type="email" class="validate" />
                    <label asp-for="Correo"></label>
                    <span asp-validation-for="Correo" class="helper-text red-text"></span>
                </div>

                <!-- Botones -->
                <div class="row btn-group">
                    <div class="col s12">
                        <button type="submit" class="btn-large blue darken-2 waves-effect waves-light">
                            <i class="material-icons left">save</i> Crear
                        </button>
                        <a asp-action="Index" class="btn-large grey darken-1 waves-effect waves-light">
                            <i class="material-icons left">arrow_back</i> Regresar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
